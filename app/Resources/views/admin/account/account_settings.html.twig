{% extends "admin/layout.html.twig" %}

{% block title %}
    Account settings | {{ parent() }}
{% endblock %}


{% block section %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Account settings
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path("admin_dashboard") }}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">Account Settings</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box">
            <div class="box-body">
                {% include "admin/flash_message.html.twig" %}

                <a href="{{ path("admin_change_password") }}"><strong>Change password >></strong></a>

                <br><br>

                {{ form_start(form) }}

                    {{ form_errors(form) }}

                    {{ form_row(form.username, { "label": "Username *", "attr": { "class": "form-control" } }) }}

                    <br>

                    {{ form_row(form.email, { "label": "Email *", "attr": { "class": "form-control" } }) }}

                    <br>

                    <button type="submit" class="btn btn-me btn-primary">Save</button>

                    {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </section><!-- /.content -->

{% endblock %}