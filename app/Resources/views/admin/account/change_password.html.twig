{% extends "admin/layout.html.twig" %}

{% block title %}
    Change password | {{ parent() }}
{% endblock %}


{% block section %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Change password
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path("admin_dashboard") }}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">Change Password</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box">
            <div class="box-body">
                {% include "admin/flash_message.html.twig" %}

                <a href="{{ path("admin_account_edit") }}"><strong><< Go to account settings</strong></a>

                <br><br>

                {{ form_start(form) }}

                    {{ form_errors(form) }}

                    {{ form_row(form.oldPassword, { "label": "Current password *", "attr": { "class": "form-control" } }) }}

                    <br>

                    {{ form_row(form.newPassword.first, { "label": "New password *", "attr": { "class": "form-control" } }) }}

                    <br>

                    {{ form_row(form.newPassword.second, { "label": "Repeat new password *", "attr": { "class": "form-control" } }) }}

                    <br>

                    <button type="submit" class="btn btn-me btn-primary">Save</button>

                    {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>

    </section><!-- /.content -->

{% endblock %}