{% extends 'public/layout.html.twig' %}

{% block title %}
    {{ entity.translate(locale).title }} | {{ parent() }}
{% endblock %}

{% block section %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>{{ entity.translate(locale).title }}</h3>
            <hr>
        </div>

        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
            {% if entity.getImagePath() %}
            <p>
                {% set imagePath = "files/companies/" ~ entity.getImagePath() %}
                <img width="750px" src="{{  asset(imagePath | imagine_filter("company_image_main")) }}" class="img-responsive" alt="{{ entity.translate(locale).title | capitalize }}">
            </p>
            {% endif %}

            {% if entity.translate(locale).description %}
                {{ entity.translate(locale).description | raw }}
            {% endif %}

            {% if entity.website %}
                <a target="_blank" href="{{ entity.website }}" class="btn btn-default btn-sm">Web page</a>
            {% endif %}
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <h3>Contact us</h3>

            {% if entity.translate(locale).address %}
                <p>{{ entity.translate(locale).address }}</p>
            {% endif %}
            <ul class="list-unstyled">
                {% if entity.translate(locale).street %}
                    <li>{{ entity.translate(locale).street }}</li>
                {% endif %}
                {% if entity.phone %}
                    <li>{{ entity.phone }}</li>
                {% endif %}
                {% if entity.email %}
                    <li>{{ entity.email }}</li>
                {% endif %}
                {% if entity.skype %}
                    <li>{{ entity.skype }}</li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}