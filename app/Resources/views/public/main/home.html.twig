{% extends 'public/layout.html.twig' %}

{% block title %}
    {{ "home" | trans }} | {{ parent() }}
{% endblock %}

{% block section %}

    <div class="row">
        <div class="col-xs-12">
            <div class="flexslider">
                <ul class="slides">
                    {% if slides %}
                        {% for slide in slides %}
                            <li>
                                {% set imagePath = "files/slides/" ~ slide.getImagePath() %}
                                <img src="{{ asset(imagePath | imagine_filter("slide_image_main")) }}" alt="{{ slide.translate(locale).title }}" class="img-responsive" />

                                {% if slide.translate(locale).title or slide.translate(locale).description %}
                                <div class="flex-caption">
                                    {% if slide.translate(locale).title %}
                                    <h3><span>{{ slide.translate(locale).title | upper }}</span></h3>
                                    {% endif %}

                                    {% if slide.translate(locale).description %}
                                    <p>
                                       {{ slide.translate(locale).description | raw }}
                                    </p>
                                    {% endif %}
                                </div>
                                {% endif %}
                            </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
