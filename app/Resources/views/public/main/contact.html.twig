{% extends 'public/layout.html.twig' %}

{% block title %}
    Contact | {{ parent() }}
{% endblock %}

{% block section %}

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <iframe width="100%"
                    height="300"
                    frameborder="0"
                    scrolling="no"
                    marginheight="0"
                    marginwidth="0"
                    src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Queen+Tamar+Avenue,+Tbilisi,+Georgia&amp;aq=1&amp;oq=quine+tamar+str&amp;sll=37.0625,-95.677068&amp;sspn=57.118084,79.013672&amp;ie=UTF8&amp;hq=&amp;hnear=Queen+Tamar+Ave,+T'bilisi,+Didi+digomi,+Tbilisi,+Georgia&amp;t=m&amp;z=14&amp;ll=41.719328,44.793422&amp;output=embed">
            </iframe>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>Contact</h3>
            <hr>
            {{ form_start(form, {"attr": {"class": "form-horizontal"}, "novalidate": "novalidate"}) }}
                <div class="form-group">
                    <label for="name" class="col-lg-2 control-label">Name <span style="color: red;">*</span></label>
                    <div class="col-lg-10">
                        {{ form_widget(form.name, {"attr": {"class": "form-control"}}) }}
                        {% if form_errors(form.name) %}
                            <div style="color: red;">{{ form_errors(form.name) }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-lg-2 control-label">E-mail <span style="color: red;">*</span></label>
                    <div class="col-lg-10">
                        {{ form_widget(form.email, {"attr": {"class": "form-control"}}) }}
                        {% if form_errors(form.email) %}
                            <div style="color: red;">{{ form_errors(form.email) }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    <label for="message" class="col-lg-2 control-label">Message <span style="color: red;">*</span></label>
                    <div class="col-lg-10">
                        {{ form_widget(form.message, {"attr": {"class": "form-control", "cols": 30, "rows": 10}}) }}
                        {% if form_errors(form.message) %}
                            <div style="color: red;">{{ form_errors(form.message) }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-12">
                        {{ form_rest(form) }}
                        <button type="submit" class="btn btn-lg btn-default">Send</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}